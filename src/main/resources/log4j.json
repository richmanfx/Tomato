{
	"configuration": {
		"name": "FirstLogConfiguration",
		"status": "info",
		"appenders": {
			"console": {
				"name": "STDOUT"
			},
			"file": {
				"name": "FILE",
				"fileName": "logs/zoer.log",
				"filePattern": "logs/file%d{dd-MM-yyy}.log.zip",
				"PatternLayout": {
					"pattern": "%d{ISO8601} [%-5p] (%F:%L) - %m%n"
				}
			}
		},
		"loggers": {
			"root": {
				"level": "trace",
				"appender-ref": [
					{"ref": "STDOUT"},
					{"ref": "FILE"}
				]
			}
		}

	}
}
